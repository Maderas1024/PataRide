<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <!-- Here you put the rest of your current view-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_signup_trial"
    tools:context="com.jshikami235gmail.pataride.SignupTrial">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etfname"
        android:hint="@string/first_et"
        android:textColor="#6c6c6c"
        android:layout_marginTop="45dp"
        android:inputType="textPersonName"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="150dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etlname"
        android:hint="Second Name"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/etfname"
        android:layout_marginBottom="20dp"
        android:textColor="#6c6c6c"
        android:inputType="textPersonName"
        android:layout_alignRight="@+id/etfname"
        android:layout_alignEnd="@+id/etfname"
        android:layout_alignLeft="@+id/etfname"
        android:layout_alignStart="@+id/etfname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEmail"
        android:textColor="#6c6c6c"
        android:inputType="textEmailAddress"
        android:hint="@string/email_et"
        android:layout_below="@+id/etlname"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/etfname"
        android:layout_alignEnd="@+id/etfname"
        android:layout_alignLeft="@+id/etlname"
        android:layout_alignStart="@+id/etlname" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#6c6c6c"
        android:ems="10"
        android:hint="Password"
        android:layout_marginTop="50dp"
        android:id="@+id/etPassword"
        android:layout_below="@+id/etEmail"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/etfname"
        android:layout_alignEnd="@+id/etfname"
        android:layout_alignLeft="@+id/etEmail"
        android:layout_alignStart="@+id/etEmail" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/etPassword"
        android:background="#d15351"
        android:text="Sign up"
        android:textColor="#fff"
        android:id="@+id/btn_signUpAgain"
        android:layout_alignRight="@+id/etfname"
        android:layout_alignEnd="@+id/etfname"
        android:layout_marginBottom="100dp"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:clickable="true"
        android:onClick="onClick" />



</RelativeLayout>
    </ScrollView>
