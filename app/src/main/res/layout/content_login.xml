<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#f2f2f2"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login2"
    tools:context="com.jshikami235gmail.pataride.login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tv_mail"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textColor="#6c6c6c"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColor="#6c6c6c"
        android:id="@+id/email_l"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tv_pswd"
        android:id="@+id/textView15"
        android:layout_below="@+id/email_l"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginBottom="0dp"
        android:textColor="#6c6c6c" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#6c6c6c"
        android:ems="10"
        android:id="@+id/pwd_l"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:background="#d15351"
        android:id="@+id/btn_signIn"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/pwd_l"
        android:layout_alignStart="@+id/pwd_l"
        android:layout_alignRight="@+id/pwd_l"
        android:layout_alignEnd="@+id/pwd_l"
        android:textColor="#fff"
        android:layout_marginBottom="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not signed up?"
        android:id="@+id/btnLinkToSignInScreen"
        android:background="#fcfcfc"
        android:textColor="#6c6c6c"
        android:layout_below="@+id/btn_signIn"
        android:layout_alignRight="@+id/btn_signIn"
        android:layout_alignEnd="@+id/btn_signIn"
        android:layout_alignLeft="@+id/btn_signIn"
        android:layout_alignStart="@+id/btn_signIn" />

</RelativeLayout>
