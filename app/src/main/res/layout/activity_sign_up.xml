<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.jshikami235gmail.pataride.Sign_up">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first_name"
        android:hint="@string/first_et"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="150dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/second_name"
        android:hint="Second Name"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/first_name"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/first_name"
        android:layout_alignEnd="@+id/first_name"
        android:layout_alignLeft="@+id/first_name"
        android:layout_alignStart="@+id/first_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_1"
        android:hint="@string/email_et"
        android:layout_below="@+id/second_name"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/first_name"
        android:layout_alignEnd="@+id/first_name"
        android:inputType="textPersonName"
        android:layout_alignLeft="@+id/second_name"
        android:layout_alignStart="@+id/second_name" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:layout_marginTop="50dp"
        android:id="@+id/password"
        android:layout_below="@+id/email_1"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/first_name"
        android:layout_alignEnd="@+id/first_name"
        android:layout_alignLeft="@+id/email_1"
        android:layout_alignStart="@+id/email_1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/password"
        android:background="#d15351"
        android:text="Sign up"
        android:textColor="#fff"
        android:id="@+id/btn_signUp"
        android:layout_alignRight="@+id/first_name"
        android:layout_alignEnd="@+id/first_name"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="0dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />

</RelativeLayout>
