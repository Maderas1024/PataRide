<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!-- Here you put the rest of your current view-->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context="com.jshikami235gmail.pataride.Sign_up">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:navigationIcon="@drawable/icon1"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first_name"
        android:hint="@string/first_et"
        android:textColor="#6c6c6c"
        android:layout_marginTop="65dp"
        android:inputType="textPersonName"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="150dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/second_name"
        android:hint="Second Name"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/first_name"
        android:layout_marginBottom="20dp"
        android:textColor="#6c6c6c"
        android:inputType="textPersonName"
        android:layout_alignRight="@+id/first_name"
        android:layout_alignEnd="@+id/first_name"
        android:layout_alignLeft="@+id/first_name"
        android:layout_alignStart="@+id/first_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_s"
        android:textColor="#6c6c6c"
        android:inputType="textEmailAddress"
        android:hint="@string/email_et"
        android:layout_below="@+id/second_name"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/first_name"
        android:layout_alignEnd="@+id/first_name"
        android:layout_alignLeft="@+id/second_name"
        android:layout_alignStart="@+id/second_name" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#6c6c6c"
        android:ems="10"
        android:hint="Password"
        android:layout_marginTop="50dp"
        android:id="@+id/password"
        android:layout_below="@+id/email_s"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/first_name"
        android:layout_alignEnd="@+id/first_name"
        android:layout_alignLeft="@+id/email_s"
        android:layout_alignStart="@+id/email_s" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/password"
        android:background="#d15351"
        android:text="Sign up"
        android:textColor="#fff"
        android:id="@+id/btn_signUp"
        android:layout_alignRight="@+id/first_name"
        android:layout_alignEnd="@+id/first_name"
        android:layout_marginBottom="100dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />


</RelativeLayout>
</ScrollView>
